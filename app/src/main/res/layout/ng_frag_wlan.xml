<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cpc_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.franky.l.capricornng.NG_MainActivity"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/pref_CurVal_WLANDataInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tV_W_H1"
            android:layout_weight="10"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
                android:id="@+id/iV_W_H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:srcCompat="@drawable/ng_wlan_frag"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/ng_main_blue" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/LL0"
        android:layout_width="match_parent">

    <TextView
        android:id="@+id/tV_W_H21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pref_CurVal_WLANDataInfo2"
        android:textSize="16sp"
        android:layout_weight="5" />
    <TextView
        android:id="@+id/tV_W_H22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_weight="1" />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/LL1"
        android:layout_width="match_parent">

        <TextView
            android:text="@string/pref_CurVal_Total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tV_W_T1"
            android:layout_weight="2" />

        <TextView
            android:text="@string/ng_DontKnow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tV_W_V1"
            android:layout_weight="3" />

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/LL2"
            android:layout_width="match_parent">

        <TextView
            android:text="@string/pref_CurVal_Sent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/tV_W_T2" />

        <TextView
            android:text="@string/ng_DontKnow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/tV_W_V2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL3">

        <TextView
            android:text="@string/pref_CurVal_Received"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/tV_W_T3" />

        <TextView
            android:text="@string/ng_DontKnow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/tV_W_V3" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LL4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/tV_W_T4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/tV_W_V4" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/ng_main_blue" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tV_W_H3"
            android:layout_weight="2"
            android:textSize="16sp"
            android:text="@string/pref_CurVal_WLANDataInfo3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tV_W_VH3"
            android:layout_weight="3"
            android:textSize="16sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/pref_CurVal_Total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tV_W_T5"
                android:layout_weight="2" />

            <TextView
                android:text="@string/ng_DontKnow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tV_W_V5"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tV_W_T6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/pref_CurVal_WLANDataInfo4" />

            <TextView
                android:text="@string/ng_DontKnow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tV_W_V6"
                android:layout_weight="3" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
